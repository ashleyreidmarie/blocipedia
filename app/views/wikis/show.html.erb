<div class="container">
    <h1>Wikis#show</h1>
    <h1><%= @wiki.name %></h1>
    
    <p><%= pluralize(@wiki.pages.count, 'page') %> on this wiki</p>
    <div class="row">
        <div class="col-md-10">
            <p><%= @wiki.description %></p>
        </div>
        <div class="col-md-2">
            <p class="text-right"><%= link_to "Edit Wiki", edit_wiki_path(id: @wiki.id) %></p>
        </div>
    </div>
    
    <p><%= link_to "Pages Index", wiki_pages_path(@wiki.id) %></p>
</div>
