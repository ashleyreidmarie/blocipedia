<div id="pages-view">
  <h1 id="page-title"><%= @page.title %></h1>
  <ol class="breadcrumb pull-right">
    <li><%= link_to @page.wiki.mud.name, @page.wiki.mud %></li>
    <li><%= link_to @page.wiki.name, @page.wiki %></li>
    <li class="active"><%= @page.title %></li>
  </ol>
  
  <% if current_user %>
    <div class="btn-group page-btn-group">
      <a type="button" class="btn dropdown-toggle" id="page-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="glyphicon glyphicon-pencil"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </a>
        <ul class="dropdown-menu" id="page-dropdown">
          <% if policy(@page).edit? %>
            <li><%= link_to "Edit Content", edit_wiki_page_path(wiki_id: @page.wiki.id, id: @page.id) %></li>
          <% end %>
          <% if policy(@page).destroy? %>
            <li><%= link_to "Delete Page", [@page.wiki, @page], method: :delete, data: {confirm: 'Are you sure you want to delete this page?'} %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  
  <hr />
  
  <div class="well">
    <div class="page-content">
      <%= table_of_contents(@page.body) %>
      <%= markdown(@page.body) %>
    </div>
  </div>

</div>