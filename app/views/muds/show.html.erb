<h1 id="mud-name"><%= @mud.name %></h1>

<% if policy(:wiki).create? %>
  <div><span class="glyphicon glyphicon-plus"></span> <%= link_to "Create New Wiki", new_wiki_path %></div>
<% end %>  

<div id="wiki-cards">

  <% policy_scope(@mud.wikis).each do |wiki| %>
    <div class="panel panel-default">
      <div class="panel-heading"><h3 class="panel-title"><%= link_to wiki.name, wiki_path(wiki.id) %></h3></div>
      <div class="panel-body text-justify">
        <%= markdown(wiki.description) %>
      </div>
      <div class="panel-footer">
        <div class="pull-left"><%= wiki.pages.count %> <span class="glyphicon glyphicon-book"></span></div>
        <div class="pull-right">
          <a href="<%= wiki_path(wiki.id) %>">
            <span class="glyphicon glyphicon-arrow-right"></span>
          </a>
        </div>
      </div>
    </div>
  <% end %>
  
</div>